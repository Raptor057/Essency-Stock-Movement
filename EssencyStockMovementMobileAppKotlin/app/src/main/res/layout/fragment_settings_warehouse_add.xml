<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.UI.Home.ui.settings.options.warehouse.AddWarehouseFragment">

    <!-- Título del formulario -->
    <TextView
        android:id="@+id/text_title_warehouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_warehouse_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para ingresar el nombre del almacén -->
    <EditText
        android:id="@+id/editTextWarehouseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/add_warehouse_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/text_title_warehouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Botón para guardar el nuevo almacén -->
    <Button
        android:id="@+id/buttonSaveWarehouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_warehouse_button_save"
        app:layout_constraintTop_toBottomOf="@id/editTextWarehouseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
